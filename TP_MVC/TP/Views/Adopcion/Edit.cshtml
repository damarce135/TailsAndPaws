@model TP.Models.Adopcion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Adopcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAdopcion" />
            <div class="form-group">
                <label asp-for="IdAnimal" class="control-label"></label>
                <select asp-for="IdAnimal" class="form-control" asp-items="ViewBag.IdAnimal"></select>
                <span asp-validation-for="IdAnimal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAdoptante" class="control-label"></label>
                <select asp-for="IdAdoptante" class="form-control" asp-items="ViewBag.IdAdoptante"></select>
                <span asp-validation-for="IdAdoptante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAdopcion" class="control-label"></label>
                <input asp-for="FechaAdopcion" class="form-control" />
                <span asp-validation-for="FechaAdopcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaSeguimiento" class="control-label"></label>
                <input asp-for="FechaSeguimiento" class="form-control" />
                <span asp-validation-for="FechaSeguimiento" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Habilitado" /> @Html.DisplayNameFor(model => model.Habilitado)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
