@model TP.Models.Donante

@{
    ViewData["Title"] = "Eliminar - Donantes";
}

<h1>Eliminar</h1>

<h3>
    ¿Está seguro que desea eliminar este donante?
</h3>
<div class="row">
    <div class="col-md-4"></div>
    &nbsp;
    &nbsp;
    <div class="col-md-4">
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Nombre): </b>
            @Html.DisplayFor(model => model.Nombre)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Apellido1): </b>
            @Html.DisplayFor(model => model.Apellido1)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Apellido2): </b>
            @Html.DisplayFor(model => model.Apellido2)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Telefono): </b>
            @Html.DisplayFor(model => model.Telefono)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Email): </b>
            @Html.DisplayFor(model => model.Email)
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdDonante" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index">Volver</a>
        </form>
    </div>
</div>

