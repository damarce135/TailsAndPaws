@model IEnumerable<TP.Models.Producto>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @{
        ViewData["Title"] = "Inicio - Producto";
    }

    <h1>Productos</h1>

    <p>
        <a asp-action="Create">Crear Nuevo</a>
    </p>
    <input class="form-control" id="miBusqueda" type="text" placeholder="Buscar Producto">
    <table class="table table-striped projects">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCategoriaNavigation)
                </th>
                @*<th>
            @Html.DisplayNameFor(model => model.Habilitado)
        </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody id="miTabla">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCategoriaNavigation.NombreCategoria)
                </td>
                @*<td>
            @Html.DisplayFor(modelItem => item.Habilitado)
        </td>*@
                <td>
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.IdProducto">Editar</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.IdProducto">Detalles</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdProducto">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $("#miBusqueda").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#miTabla tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>