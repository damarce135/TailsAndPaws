@model TP.Models.Animal

@{
    ViewData["Title"] = "Eliminar - Animal";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que desea eliminar este animal?</h3>
<div class="row">
    <div class="col-md-4"></div>
    &nbsp;
    &nbsp;
    <div class="col-md-4">
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Nombre): </b>
            @Html.DisplayFor(model => model.Nombre)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Sexo): </b>
            @Html.DisplayFor(model => model.Sexo)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Tamano): </b>
            @Html.DisplayFor(model => model.Tamano)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Castrado): </b>
            @Html.DisplayFor(model => model.Castrado)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Edad): </b>
            @Html.DisplayFor(model => model.Edad)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.FechaIngreso): </b>
            @Html.DisplayFor(model => model.FechaIngreso)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Especie): </b>
            @Html.DisplayFor(model => model.Especie)
        </div>
        <div class="form-group">
            <b>@Html.DisplayNameFor(model => model.Adoptado): </b>
            @Html.DisplayFor(model => model.Adoptado)
