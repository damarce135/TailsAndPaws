@model IEnumerable<FrontEnd.Models.CategoriaViewModel>

@{
    ViewBag.Title = "Inicio Categoría";
}

<h2>Categorías</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idCategoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreCategoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreCategoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.idCategoria }) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.idCategoria})
        </td>
    </tr>
}

</table>
